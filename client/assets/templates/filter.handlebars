<div class="filter">
	<div class="search row align-center">
		<input class="small-10 large-12" type="text" value="Search">
	</div>
</div>
<div class="row align-center">
	<div class="small-11 large-12 rating">	
		<h2>Rating</h2>
	</div>
</div>

<div class="row align-center">
	<div class="small-12">
		<div class="slider" id="circles-slider">
		</div>	
	</div>
</div>
<div class="row align-center">
	<div class="small-11 large-12 rating">	
		<h2>Year</h2>
	</div>
</div>
<div class="row align-center">
	<div class="small-12">
		<div class="slider year-slider" id="circles-slider">
		</div>	
	</div>
</div>

