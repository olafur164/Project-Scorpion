<div class="filter">
	<div class="search row align-center">
		<input class="small-10 large-12" type="text" value="" id="search">
	</div>
</div>
<div class="row align-center">
	<div class="small-11 large-12 rating">	
		<h2>Rating</h2>
	</div>
</div>

<div class="row align-center">
	<div class="small-12">
		<div class="slider" id="circles-slider">
<!-- 		<input type="range" id="min">
		<input type="range" id="max"> -->
		</div>	
	</div>
</div>
<div class="row align-center">
	<div class="small-11 large-12 rating">	
		<h2>Year</h2>
	</div>
</div>
<div class="row align-center">
	<div class="small-12">
		<div class="slider year-slider" id="circles-slider">
		</div>	
	</div>
</div>

<div class="row align-center">
	<div class="small-11 large-12 rating">	
		<h2>Genre</h2>
	</div>
</div>
	<div id="filters" class="row small-10 large-8 align-center responsiveFilter">
		{{#each genreList.genres}}
			<div class="button" id="filter-{{this.id}}" onClick="check({{this.id}});" data-filter="{{this.id}}">{{this.name}}</div>
		{{/each}}
	</div>

	<div class="row align-center">
		<button class="confirmButton" onClick="newFilter();">Confirm</button>
	</div>
<div class="row">
	<div class="results small-12 large-12 ">
	</div>
</div>

