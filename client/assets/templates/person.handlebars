<div class="movieHeader">
	<div class="large-12 trailer">
		<video src="" poster="{{#if data.profile_path }}https://image.tmdb.org/t/p/original{{data.profile_path}}{{/if}}" autoplay="" class="video" loop=""><source src="media/marbleEdit.mp4" type="video/mp4"></video>
	</div>
</div>


<div class="row align-center small-12 large-12 skewInfoBox">
	<div class="unskewInfoBox large-10 columns">
		<div class="column floatingPoster small-6 medium-4 large-3">
			<img src="{{#if data.profile_path }}https://image.tmdb.org/t/p/w500/{{data.profile_path}}{{/if}}" alt="">
		</div>

	<div class="row align-right movieInfo">
		<div class="small-6 column flex-container flex-dir-column">
			<div class="row flex-child-grow">
				<div class="column small-6">
					<h4>Birthday<br></h4><b>{{data.birthday}}</b>
				</div>
				<div class="small-6">
					<h4>Gender:<br></h4><b>{{#compare data.gender 2}}Male{{/compare}}{{#compare data.gender 1}}Female{{/compare}}</b>
				</div>
			</div>
			<div class="flex-child-grow large-flex-first movieTitle">
				<h2>{{data.title}}</h2>
			</div>
			<div class="flex-child-shrink">
				<h4><strong>Name:</strong> {{data.name}}</h4>
			</div>
			<div class="flex-child-auto">
				<h4><strong>Also known as:</strong>{{#each data.also_known_as}}{{this}},{{/each}}</h4>
			</div>
		</div>
	</div>
	<div class="row align-right">
	<div class="column small-12 large-6 storyLine">
	<h2>Biography</h2>
	<p>{{data.biography}}</p>
	</div>	
	</div>
	<div class="cast">
	<h2>Cast</h2>
	<div class="responsiveCast small-12 large-12 align-center">
	{{#each credits.cast}}

	<div class="cast">
	<img src="{{#if this.profile_path}}https://image.tmdb.org/t/p/w500{{this.profile_path}}{{/if}}" alt="">
	<div class="artistName">
	<h4>{{this.name}}</h4>
	</div>
	</div>
	{{/each}}
	</div>
	</div>

	<div class="stills large-flex-first">
	<h2>Stills</h2>
	<div class="">
	<div class="responsiveStills movieStills small-12 large-12">
	{{#each images.backdrops}}
	<div class="still">
	<img src="https://image.tmdb.org/t/p/w500{{this.file_path}}" alt="">
	</div>
	{{/each}}

	</div>
	</div>
	</div>

	<div class="relevantMovies">
	<h2>People also liked</h2>
	<div class="responsive relevant">
	{{#each similar.results}}
				<div class="small-11 large-3 movieImg">
					<a href="#/movie/{{this.id}}">
								<div class="movieImgRating">
									{{this.vote_average}}
								</div>
						<div class="columns small-10 medium-12 large-12 movieImgInfo">
							<div class="row">
								<div class="movieImgTitle">
									<h3>{{this.title}}</h3>
								</div>
							</div>
						</div>
						<img src="{{#if this.poster_path }}https://image.tmdb.org/t/p/w500/{{this.poster_path}}{{/if}}" alt="">
					</a>
				</div>
	{{/each}}
	</div>
	</div>

</div>
</div>

</div>
</div>