<div class="row">
		<input type="search" id="search">
</div>
<div class="row">
	<div class="results column small-10 large-12">
		<div class="column results"></div>
	</div>
</div>
<div class="row">
	<div class="results column small-10 large-12">
		<div class="column results">
		{{#each data.results}}
			{{#compare this.media_type "person"}}
			<div class="row searchItem">
				<a href="#/person/{{this.id}}">
				<div class="small-4 medium-2 column">
					<img src="{{#if this.profile_path }}https://image.tmdb.org/t/p/w500{{this.profile_path}}{{/if}}">
				</div>
				<div class="small-8 medium-10 column">
					<div class="movie-title">{{this.name}}</div>
					{{this.birthday}}

					 	{{#each this.known_for}}
						<div class="column">{{this.title}}</div>
						{{/each}}
				</div>
				</a>
			</div>
			{{/compare}}
			{{#compare this.media_type "tv"}}
			<div class="row searchItem">
				<a href="#/tv/{{this.id}}">
				<div class="small-4 medium-2 column">
					<img src="{{#if this.poster_path }}https://image.tmdb.org/t/p/w500{{this.poster_path}}{{/if}}">
				</div>
				<div class="small-8 medium-10 column">
					<div class="movie-title">{{this.name}}</div>
					<div class="row">
						<div class="column"></div>
					</div>
				</div>
				</a>
			</div>
			{{/compare}}
			{{#compare this.media_type "movie"}}
			<div class="row searchItem">
				<a href="#/movie/{{this.id}}">
				<div class="small-4 medium-2 column">
					<img src="{{#if this.poster_path }}https://image.tmdb.org/t/p/w500{{this.poster_path}}{{/if}}">
				</div>
				<div class="small-6 medium-10 column">
					<div class="movie-title">{{this.title}}</div>
					<div class="movie-overview"><p>{{this.overview}}</p></div>
				</div>
				</a>
			</div>
			{{/compare}}
		{{/each}}
		</div>
	</div>
</div>